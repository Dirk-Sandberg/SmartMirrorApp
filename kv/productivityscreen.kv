<ProductivityScreen@Screen>:
    #Images taken from Temps app
    FloatLayout:
        BoxLayout:
            size_hint: 1, .8
            pos_hint: {"top": 1, "right": 1}
            spacing: dp(20)
            padding: dp(20)
            MDCard:
                id: chart_card

        BoxLayout:
            size_hint: 1, .2
            spacing: dp(20)
            padding: dp(20)
            MDCard:
                MDFlatButton:
                    size_hint: 1, 1
                    color: 0,0,0,1
                    background_normal: "images/transparent.png"
                    text: "Back"
                    on_release:
                        app.load_screen("home_screen")
            MDCard:
                MDFlatButton:
                    size_hint: 1, 1
                    color: 0,0,0,1
                    background_normal: "images/transparent.png"
                    text: "Past Week"
                    on_release:
                        root.chart.source = "images/Chart1.png"
            MDCard:
                MDFlatButton:
                    size_hint: 1, 1
                    color: 0,0,0,1
                    background_normal: "images/transparent.png"
                    text: "Past Month"
                    on_release:
                        root.chart.source = "images/Weekly Success Rate.png"
            MDCard:
                MDFlatButton:
                    size_hint: 1, 1
                    color: 0,0,0,1
                    background_normal: "images/transparent.png"
                    text: "All Time"
                    on_release:
                        root.chart.source = "images/TotalSuccessRate.png"
